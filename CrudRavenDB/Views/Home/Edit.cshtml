@model CrudRavenDB.Models.Cliente

<h2>Editar Cliente</h2>
<hr>

<form asp-action="edit" asp-controller="home" method="POST" class="form">
    <input asp-for="Id" hidden />
    <input asp-for="Nome" value="@Model.Nome" placeholder="Name" class="form-control" />
    <br>
    <input asp-for="Descricao" value="@Model.Descricao" placeholder="Description" class="form-control" />
    <br>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="index" asp-controller="home" class="btn btn-link">Back to list</a>
</form>